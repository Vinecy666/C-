#include <iostream>
#include <algorithm>
#include <string> 
using namespace std;
int a[200020];
int main()
{
	int n,ans=0,ans1=0,ans2=0,ans3=0,Max=0;
	cin>>n;
	int flag1 = 1,flag2=n,flag=0;
	for(int i=1;i<=n;i++)
	{
		cin>>a[i];
		if(a[i]==1)
		 flag++;
	}
	for(int i=1;i<=n;i++)
	{
		if(a[i]==1)
		{
			ans1++;
		} else break;
		    
	}               //head
	for(int i =n;i>=0;i--)
	{
		if(a[i]==1)
		{
			ans2++;
		}else break;
	}                //å°¾ 
	
	for(int j = ans1+1;j<=n-ans2;j++)
	{
		if(a[j]==1)
		  {  
		  	ans3++;
		  }
		  else 
		  {
		  	Max=max(ans3,Max);
		  	ans3=0;
		  }
		    
	}                  //middle
	ans = max(ans1+ans2,Max);
	cout<<ans<<endl;
}
