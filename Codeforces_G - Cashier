#include <iostream>
using namespace std;
int main()
{
	int n,l,m,sum=0;
	cin>>n>>l>>m;
	if(n==0)
	{
		sum=l/m;
	    cout<<sum<<endl;
	    return 0;
	}else
	{
	 int a[n+1],b[n+1];
	 for(int i=0;i<n;i++)
	 {
	 	cin>>a[i]>>b[i];
	 }
	 if(a[1]>=m)
	 {
	 	sum=a[1]/m;
	 }
	 for(int i=1;i<n;i++)
	 {
	 	if((a[i]-b[i-1])>=m)
	 	{
	 		sum+=(a[i]-b[i-1])/m;
		}
	 }
	 if((l-b[n-1])>m)
	   sum+=(l-b[n-1])/m;
	  cout<<sum<<endl;
	 
	}
} 
