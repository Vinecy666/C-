#include <iostream>
using namespace std;
int main()
{
	int n,l,m,sum=0;
	cin>>n>>l>>m;
	if(n==0)
	{
		sum+=l/m;
	}else
	{
	 int a[n+1],b[n+1];
	 for(int i=0;i<n;i++)
	 {
	 	cin>>a[i]>>b[i];
	 }
	 	sum+=a[0]/m;
	 for(int i=1;i<n-1;i++)
	 {
	 	//if((a[i+1]-(b[i]+a[i]))>=m)
	 		sum+=(a[i+1]-(b[i]+a[i]))/m;
	 }

	   sum+=(l-(b[n-1]+a[n-1]))/m;
	  cout<<sum<<endl;

	}
}
